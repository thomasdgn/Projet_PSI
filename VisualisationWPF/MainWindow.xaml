<Window x:Class="VisualisationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan du métro de Paris" Height="650" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="🗺️ Calculateur de trajet - Métro Parisien" 
                   FontSize="24" FontWeight="Bold" Foreground="#333" 
                   Margin="10" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Left"/>

        <!-- Canvas pour la carte -->
        <Canvas x:Name="canvasCarte" Grid.Row="1" Grid.Column="0"
                Background="WhiteSmoke" 
                Margin="20" />

        <!-- Panneau latéral de contrôle -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="🔍 Itinéraire" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            <TextBlock Text="Station de départ :" Margin="0 5 0 0"/>
            <TextBox x:Name="txtDepart" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Station d'arrivée :" Margin="0 5 0 0"/>
            <TextBox x:Name="txtArrivee" Width="250" Height="30" Margin="0 0 0 10"/>

            <Button Content="🚇 Afficher le chemin le plus court"
                    Width="250" Height="35" Margin="0 10 0 5"
                    Click="BtnAfficherChemin_Click"/>

            <Button Content="🔄 Réinitialiser la carte"
                    Width="250" Height="35" Margin="0 5 0 5"
                    Click="BtnReinitialiser_Click"/>

            <CheckBox x:Name="chkModeNuit" Content="🌙 Mode nuit" Margin="0 10 0 5" Checked="ChkModeNuit_Checked" Unchecked="ChkModeNuit_Unchecked"/>

            <TextBlock x:Name="txtTempsTotal" Margin="0 20 0 0" FontSize="14" FontWeight="Bold" Foreground="DarkRed"/>
        </StackPanel>
    </Grid>
</Window>
